section class="m-5"
  table id="flags-datatable" class="table table-striped table-bordered"
    thead
      tr
        th scope="col" ID
        th scope="col" Created At
        th scope="col" Team
        th scope="col" Exploit
        th scope="col" Content
        th scope="col" Status
        th scope="col" Points
    tbody

javascript:
  const tableSelector = '#flags-datatable';
  if (!$.fn.dataTable.isDataTable(tableSelector)) {
    $(document).on('turbolinks:load', () => {
      document.table = $(tableSelector).DataTable({
        processing: true,
        serverSide: true,
        ajax: {
          url: $(tableSelector).data('source')
        },
        stateSave: true,
        buttons: ['refresh'],
        pagingType: 'full_numbers',
        columns: [
          {"data": "id"},
          {"data": "created_at"},
          {"data": "team"},
          {"data": "exploit"},
          {"data": "content"},
          {"data": "status"},
          {"data": "pts"},
        ],
        order: [0, 'desc'],
        initComplete: () => document.table.buttons().container().prependTo($('.col-md-6:eq(1)', document.table.table().container()))
      });
    });
  }